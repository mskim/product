<h1>Listing items</h1>

<%= paginate @items %>
<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Code</th>
    <th>Brand</th>
    <th>Price</th>
    <th>Description</th>
    <th>Country</th>
    <th>Delivery</th>
    <th>fee</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%= item.name %></td>
    <td><%= item.category %></td>
    <td><%= item.code %></td>
    <td><%= item.brand %></td>
    <td><%= item.price %></td>
    <td><%= item.description %></td>
    <td><%= item.country_of_origin %></td>
    <td><%= item.delivery_method %></td>
    <td><%= item.delivery_fee %></td>

    <td><%= link_to 'Show', item %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

